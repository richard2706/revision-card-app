<!-- This LinearLayout contains everything in this layout --><LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"><!-- Create the toolbar that uses the attributes set in AppTheme (in styles.xml) --><android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize" android:background="?attr/colorPrimary" android:elevation="4dp" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" /><!-- Textbox that is only visible in search mode that will filter the list of questions. The hint text appears when the EditText is empty so the
		user knows what the EditText is for --><EditText android:id="@+id/searchEditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Type here to search" android:visibility="gone" android:maxLength="50" /><!-- If there are no cards in the deck, this textview will prompt the user to create a new card --><TextView android:id="@+id/addCardPromptTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:gravity="center" android:text="Click + to add a card" android:textSize="18dp" /><!-- If there are cards in the deck, this textview will tell the user how to study the deck --><TextView android:id="@+id/studyPrompt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:gravity="center" android:textSize="18dp" android:text="Click study in the menu above to study a random selection of cards from this deck" /><!-- This listview will take up the maximum amount of space and display all the cards in the seleted deck --><ListView android:id="@+id/cardListView" android:layout_width="match_parent" android:layout_height="match_parent" /></LinearLayout>