<?xml version="1.0" encoding="utf-8" ?>
<!-- These schemas are needed to add items to the menu in the toolbar -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">
  <!-- This file lists all the items in the toolbar
        - icons are stored in the drawable folders for different screen sizes. The size is determined automatically
        - showAsAction will specify if the item should be shown in the toolbar or overflow menu
        - title will display the specified text instead of the icon when in the overflow menu
  -->
  <!-- Button to add a card to the deck in the AddCard activity -->
  <item
    android:id="@+id/addCard"
    android:icon="@drawable/add"
    app:showAsAction="ifRoom"
    android:title="Add card" />
  <!-- Button to edit the name of the deck in the EditDeck activity-->
  <item
    android:id="@+id/editDeckName"
    android:icon="@drawable/edit"
    app:showAsAction="ifRoom"
    android:title="Edit deck name" />
  <!-- Button to delete the deck after a conformation message -->
  <item
    android:id="@+id/deleteDeck"
    android:icon="@drawable/delete"
    app:showAsAction="never"
    android:title="Delete deck" />
</menu>