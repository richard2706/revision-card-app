<?xml version="1.0" encoding="utf-8" ?>
<!-- These schemas are needed to add items to the menu in the toolbar -->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">
  <!-- This file lists all the items in the toolbar
        - icons are stored in the drawable folders for different screen sizes. The size is determined automatically
        - showAsAction will specify if the item should be shown in the toolbar or overflow menu
        - title will display the specified text instead of the icon when in the overflow menu
  -->
  <!-- Button to add the deck -->
  <item
    android:id="@+id/addDeck"
    android:icon="@drawable/done"
    app:showAsAction="ifRoom"
    android:title="Add" />
  <!-- Button to cancel adding the deck and return to the main activity -->
  <item
    android:id="@+id/cancel"
    android:icon="@drawable/cancel"
    app:showAsAction="ifRoom"
    android:title="Cancel" />
</menu>