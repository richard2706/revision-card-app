  <string name="colours_prompt">Colours</string>
  <!-- A string array containing colours to populate the spinner -->
  <string-array name="colours">
    <item>White</item>
    <item>Black</item>
    <item>Red</item>
    <item>Orange</item>
    <item>Yellow</item>
    <item>Green</item>
    <item>Turquoise</item>
    <item>Blue</item>
    <item>Pink</item>
  </string-array>

